{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": true
  },
  "include": [
    "src/app/**/*",
    "src/main.ts",
    "src/polyfills.ts",
    "src/typings.d.ts",
    "src/vendor.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
