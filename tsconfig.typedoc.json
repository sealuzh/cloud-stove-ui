{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    "typeRoots": ["./node_modules/@types"],
    "types": [
      "node"
    ],
    "lib": ["es2016", "dom"]
  },
  "include": [
    "src/app/**/*",
    "src/main.ts",
    "src/polyfills.ts",
    "src/typings.d.ts",
    "src/vendor.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
